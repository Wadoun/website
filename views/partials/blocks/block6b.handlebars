<div class="people-title justify-end" data-effect="fade" data-effect-type="in-right">
  <h3 class="important-text-green-mist uppercase">Contact</h3>
  <h2 class="important-text-white uppercase">US</h2>
</div>
<div class="people-team">
  <div class="people-team-container caci">
    <div class="bg">
      <div class="form-group" id="divMain">
        <form class="form-vertical" role="form" method="post" action="/email">
            <div class="form-group input-effect">
              <input type="text" class="effect-20" name="name" id="name" placeholder=""/>                
                  <label for="sender"> Full Name * :                    
                  </label>    
                  <span class="focus-border">
                    <i></i>
                  </span>            
            </div>    
            <div class="form-group input-effect">
              <input type="text" class="effect-20" name="email" id="email" placeholder=""/>                
                  <label for="email"> Email Address * :                  
                  </label>    
                  <span class="focus-border">
                    <i></i>
                  </span>            
            </div>
            <div class="form-group input-effect">
              <input type="text" class="effect-20" name="phone" id="phone" placeholder=""/>                
                  <label for="phone"> Phone number :                    
                  </label>    
                  <span class="focus-border">
                    <i></i>
                  </span>            
            </div> 
            <div class="form-group input-effect">
              <textarea name="message" id="message" class="effect-20" placeholder=""></textarea>                           
                <label for="message"> Message * :                  
                </label>    
                <span class="focus-border">
                  <i></i>
                </span>            
            </div>
            <div class="form-group">
              <div class="box min-opacity beige fade-in" data-anchor="contact" data-effect="fade" data-effect-type="in-left">
                <svg xmlns="http://www.w3.org/2000/svg" width="100%" height="100%">
                  <line class="top" x1="0" y1="0" x2="900" y2="0"></line>
                  <line class="left" x1="0" y1="460" x2="0" y2="-920"></line>
                  <line class="bottom" x1="200" y1="50" x2="-600" y2="50"></line>
                  <line class="right" x1="200" y1="0" x2="200" y2="1380"></line>
                </svg>            
                <button type="submit" class="button">Send</button>           
              </div>
            </div>             
          </form>
      </div>
    </div>
  </div>
</div>
